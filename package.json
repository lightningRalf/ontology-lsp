{
  "name": "ontology-lsp",
  "version": "2.0.0",
  "description": "Unified ontology-enhanced code intelligence system with MCP, LSP, and HTTP adapters",
  "type": "module",
  "main": "dist/core/analyzer.js",
  "bin": {
    "ontology-lsp": "./dist/cli/cli.js",
    "ontology-mcp": "./dist/mcp/mcp.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ontology-lsp"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:all",
    "build:all": "bun run build:lsp && bun run build:mcp-stdio && bun run build:mcp-sse && bun run build:http && bun run build:cli",
    "build:lsp": "~/.bun/bin/bun build ./src/servers/lsp.ts --target=bun --outdir=dist/lsp --format=esm --external tree-sitter --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:mcp-stdio": "~/.bun/bin/bun build ./src/servers/mcp.ts --target=bun --outdir=dist/mcp --format=esm --external tree-sitter --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:mcp-sse": "~/.bun/bin/bun build ./src/servers/mcp-sse.ts --target=bun --outdir=dist/mcp-sse --format=esm --external tree-sitter --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:http": "~/.bun/bin/bun build ./src/servers/http.ts --target=bun --outdir=dist/http --format=esm --external tree-sitter --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:cli": "bun build ./src/servers/cli.ts --target=bun --outdir=dist/cli --format=esm --external tree-sitter --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:tsc": "tsc",
    "start": "bun run dist/lsp/lsp.js --stdio",
    "start:mcp": "bun run src/servers/mcp.ts",
    "dev": "bun run src/servers/lsp.ts",
    "test": "bun test",
    "test:nonperf": "bun test",
    "test:perf": "PERF=1 bun test tests/performance tests/benchmarks",
    "test:e2e": "E2E=1 bun test tests/e2e",
    "test:mcp": "bun test test/adapters/mcp.test.ts",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "clean": "rimraf dist"
  },
  "keywords": [
    "lsp",
    "ontology",
    "refactoring",
    "pattern-learning",
    "fuzzy-matching"
  ],
  "author": "Claude Code Enhanced",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/glob": "^9.0.0",
    "bloom-filters": "^3.0.4",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.0",
    "leven": "^4.0.0",
    "lru-cache": "^11.1.0",
    "minimatch": "^10.0.1",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "uuid": "^11.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/graphlib": "^2.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "tree-sitter",
    "tree-sitter-javascript",
    "tree-sitter-python",
    "tree-sitter-typescript"
  ]
}
