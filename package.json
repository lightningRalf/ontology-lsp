{
  "name": "ontology-lsp-proxy",
  "version": "1.0.0",
  "description": "Ontology-enhanced LSP proxy with fuzzy matching and pattern learning",
  "main": "dist/server.js",
  "bin": {
    "ontology-lsp": "./dist/cli/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ontology-lsp"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/server.ts --target=bun --outdir=dist --format=cjs --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python && bun build ./src/cli/index.ts --target=bun --outdir=dist/cli --format=cjs --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python && bun build ./src/api/http-server.ts --target=bun --outdir=dist/api --format=cjs --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:cli": "bun build ./src/cli/index.ts --target=bun --outdir=dist/cli --format=cjs --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:api": "bun build ./src/api/http-server.ts --target=bun --outdir=dist/api --format=cjs --external tree-sitter-typescript --external tree-sitter-javascript --external tree-sitter-python",
    "build:tsc": "tsc",
    "start": "bun run dist/server.js --stdio",
    "dev": "bun run src/server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "clean": "rimraf dist"
  },
  "keywords": [
    "lsp",
    "ontology",
    "refactoring",
    "pattern-learning",
    "fuzzy-matching"
  ],
  "author": "Claude Code Enhanced",
  "license": "MIT",
  "dependencies": {
    "@types/glob": "^9.0.0",
    "bloom-filters": "^3.0.4",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "graphlib": "^2.1.8",
    "js-yaml": "^4.1.0",
    "leven": "^4.0.0",
    "lru-cache": "^11.1.0",
    "minimatch": "^10.0.1",
    "tree-sitter": "^0.21.0",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "uuid": "^11.1.0",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/graphlib": "^2.1.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "tree-sitter",
    "tree-sitter-javascript",
    "tree-sitter-python",
    "tree-sitter-typescript"
  ]
}
