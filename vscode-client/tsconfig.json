{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["ES2020"],
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out"
    ],
    "include": [
        "src/**/*"
    ]
}