{
  "name": "@ontology-lsp/mcp-server",
  "version": "1.0.0",
  "description": "MCP server exposing 5-layer ontology-enhanced LSP with intelligent code understanding",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=node --format=esm",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "biome check --write .",
    "mcp:stdio": "bun run src/stdio.ts",
    "mcp:sse": "bun run src/sse-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "bun-mcp-sse-transport": "file:../bun-mcp-sse-transport",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.3"
  },
  "engines": {
    "bun": ">=1.2.20"
  }
}