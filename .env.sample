# Ontology LSP Server Configuration
# Copy this file to .env and customize as needed

# Server Ports
HTTP_API_PORT=7000        # Main HTTP API server
MCP_SSE_PORT=7001         # MCP SSE server
TEST_API_PORT=7002        # Test HTTP API server (for testing only)
TEST_MCP_PORT=7003        # Test MCP server (for testing only)

# Server Host
LSP_HOST=localhost

# Performance Settings
LSP_TIMEOUT=5000          # Request timeout in milliseconds
LSP_MAX_RETRIES=3         # Maximum number of retries
LSP_CACHE_ENABLED=true    # Enable response caching
LSP_CACHE_TTL=300000      # Cache TTL in milliseconds (5 minutes)

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=5        # Failures before opening circuit
CIRCUIT_BREAKER_RESET_TIMEOUT=30000 # Reset timeout in milliseconds

# Database Settings
DB_PATH=.ontology/ontology.db      # SQLite database path (or :memory: for in-memory)

# Workspace Settings
WORKSPACE_ROOT=./                  # Root directory for workspace

# Environment
NODE_ENV=development               # or 'production', 'test'
BUN_ENV=development                # or 'production', 'test'

# Logging
LOG_LEVEL=info                     # debug, info, warn, error

# Authentication (for production)
# LSP_API_KEY=your-api-key-here

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=*