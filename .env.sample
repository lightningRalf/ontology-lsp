# Ontology-LSP Environment Configuration Template
# Copy this file to .env and customize for your environment

# ================================
# Application Configuration
# ================================
NODE_ENV=development
LOG_LEVEL=debug

# Service Ports (default ports from VISION.md)
HTTP_API_PORT=7000
MCP_SSE_PORT=7001
LSP_SERVER_PORT=7002

# Workspace Configuration
ONTOLOGY_WORKSPACE=/path/to/your/workspace
DATABASE_PATH=./.ontology/ontology.db

# ================================
# Database Configuration
# ================================
# PostgreSQL (for production with vector embeddings)
DATABASE_URL=postgres://ontology:your_password@localhost:5432/ontology_lsp
POSTGRES_USER=ontology
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ontology_lsp

# SQLite (for development)
SQLITE_PATH=./.ontology/ontology.db

# ================================
# Cache Configuration (Redis/Valkey)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600
DISTRIBUTED_CACHE=true

# ================================
# Performance & Learning Settings
# ================================
PERFORMANCE_MONITORING=true
PATTERN_LEARNING=true
FUZZY_MATCHING=true

# Layer performance targets (milliseconds)
LAYER1_TARGET_MS=5     # Claude Tools Layer
LAYER2_TARGET_MS=50    # Tree-sitter Layer  
LAYER3_TARGET_MS=10    # Ontology Engine
LAYER4_TARGET_MS=10    # Pattern Learner
LAYER5_TARGET_MS=20    # Knowledge Spreader

# ================================
# Security Configuration
# ================================
# JWT for API authentication
JWT_SECRET=your_very_secure_jwt_secret_key_256_bits
JWT_EXPIRES_IN=24h

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
TRUST_PROXY=true

# ================================
# Observability & Monitoring
# ================================
# OpenTelemetry Tracing
OTEL_ENABLED=true
OTEL_SERVICE_NAME=ontology-lsp
OTEL_SERVICE_VERSION=2.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PREFIX=ontology_lsp

# ================================
# Feature Flags
# ================================
# Experimental features
ENABLE_VECTOR_SEARCH=true
ENABLE_SEMANTIC_ANALYSIS=true
ENABLE_AI_SUGGESTIONS=true